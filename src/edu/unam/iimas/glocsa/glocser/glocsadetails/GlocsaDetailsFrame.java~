    public void setOpenAlignment(Alignment openAlignment) {
        this.openAlignment = openAlignment;
        glocsaRatingPanel.setAlignment(openAlignment);
        columnDiversityChartPanel.setAlignment(openAlignment);
    }

    public void setGlocsaRating(GlocsaRating glocsaRating) {
        this.glocsaRating = glocsaRating;
        glocsaRatingPanel.setRating(glocsaRating);
        columnHomogeneityChartPanel.setGlocsaRating(glocsaRating);
    }

    public void setEventCount(EventCount eventCount) {
        this.eventCount = eventCount;
        glocsaRatingPanel.setEventCount(eventCount);
        columnDiversityChartPanel.setEventCount(eventCount);
        
    }

    public void setOpenAlignmentFile(File openAlignmentFile) {
        this.openAlignmentFile = openAlignmentFile;
        glocsaRatingPanel.setAlignmentFile(openAlignmentFile);
    }
    
